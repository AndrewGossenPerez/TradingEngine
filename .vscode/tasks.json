{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build TradingEngine",
            "type": "process",
            "command": "/bin/bash",
            "args": [
                "-lc",
                "set -e; mkdir -p build; SRC_FILES=$(find src -name \"*.cpp\" -print); clang++ -std=c++17 -Wall -Wextra -g -Iinclude $SRC_FILES -o build/engine"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "Run TradingEngine",
            "type": "process",
            "command": "/bin/bash",
            "args": [
                "-lc",
                "./build/engine"
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "dependsOn": "Build TradingEngine",
            "group": "test"
        },
        {
            "type": "cppbuild",
            "label": "C/C++: clang++ build active file",
            "command": "/usr/bin/clang++",
            "args": [
                "-fcolor-diagnostics",
                "-fansi-escape-codes",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}